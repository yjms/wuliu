.row {
  width: 100%;
  padding: 0 28rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.row1 {
  width: calc(100vw - 56rpx);
  margin: 0 auto;
}
.flex_row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.flex_col {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
