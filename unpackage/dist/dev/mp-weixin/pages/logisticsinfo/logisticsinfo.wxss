          box-sizing: border-box;
}
.centerBox {
  padding-top: 36rpx;
}
.itemBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 0rpx 66rpx 50rpx 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.statusTxt {
  font-size: 32rpx;
  color: #5393FD;
  font-weight: bold;
}
.rigInfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: justify;
  padding-left: 50rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-left: 34rpx;
  position: relative;
  font-size: 28rpx;
}
.itemBox > .rigInfo::before {
  content: "";
  width: 0rpx;
  height: 50rpx;
  border-left: 2rpx dashed #888;
  position: absolute;
  left: 0;
  top: 0;
}
.itemBox:not(:last-child) > .rigInfo::before {
  height: calc(100% + 50rpx);
}
.time {
  font-size: 28rpx;
}
.final, .final > .statusTxt {
  color: #888;
}
.final > .statusTxt {
  font-size: 32rpx;
  font-weight: bold;
}
.start, .end {
  position: absolute;
  left: 0;
  top: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  z-index: 99;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #fff !important;
}
.startbox, .center {
  width: 46rpx;
  height: 46rpx;
  background-color: #5393FD;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  position: absolute;
  left: 0;
  top: 0;
  -webkit-transform: translateX(-50%) rotate(45deg);
          transform: translateX(-50%) rotate(45deg);
}
.center {
  width: 20rpx;
  height: 20rpx;
  top: 16rpx;
}
