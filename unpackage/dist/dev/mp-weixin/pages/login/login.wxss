.centerBox {
  width: 100%;
}
.loginText {
  color: #333;
  font-size: 56rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
}
.photoBox, .codeBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 62rpx;
  border-bottom: 2rpx solid #dedede;
  padding-bottom: 20rpx;
}
.photoBox {
  margin-top: 100rpx;
}
.loginicon {
  font-size: 46rpx;
  color: #5897E3;
}
.photoBox > .loginicon {
  font-size: 52rpx;
}
.photoBox > input, .codeBox > input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 32rpx;
  font-size: 32rpx;
}
.loginBtn {
  width: 609rpx;
  height: 90rpx;
  border-radius: 20rpx;
  background-color: #5393FD;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  color: #FFFFFF;
  font-size: 34rpx;
  letter-spacing: 8rpx;
  margin-top: 140rpx;
}
.loading {
  width: 100vw;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #FFFFFF;
  z-index: 99;
}
.forget {
  text-align: right;
  padding-right: 20rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
  color: #5393FD;
